region       = "eu-central-1"
project_name = "savepoint"
environment  = "dev"
app_url      = "http://localhost:6060"
# Must be globally unique in region. Change to your value.
domain_prefix = "savepoint-dev-abc123"
enable_cognito_native = false

# Optional: enable Google as Cognito IdP
# google_client_id     = "..."
# google_client_secret = "..."

# --- S3 (Production-like) ---
# Optional explicit bucket name (defaults to "${project_name}-${environment}")
# s3_bucket_name = "savepoint-dev"

# Additional CORS origins (app_url is always included)
# s3_additional_allowed_origins = [
#   "http://127.0.0.1:6060"
# ]

# Optional: attach S3 access policy to an existing ECS task role by name
# s3_ecs_task_role_name = "savepoint-dev-task-role"

# --- Lambda & Steam Import ---
# Enable SQS event source for Steam Import Lambda (can disable for testing)
# enable_steam_import_event_source = true
